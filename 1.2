#include <iostream>
#include "FileName.h"
using namespace std;

BitwiseResults CalculateBitwise(const string& a, const string& b) {
    int n = a.length();
    BitwiseResults r;
    r.OR = "";
    r.AND = "";
    r.XOR = "";

    for (int i = 0; i < n; i++) {
        char A = a[i];
        char B = b[i];

        // OR
        if (A == '1' || B == '1')
            r.OR += '1';
        else
            r.OR += '0';

        // AND
        if (A == '1' && B == '1')
            r.AND += '1';
        else
            r.AND += '0';

        // XOR
        if (A != B)
            r.XOR += '1';
        else
            r.XOR += '0';
    }
    return r;
}

int main() {
    string a = "111100000";
    string b = "101010011";

    BitwiseResults r = CalculateBitwise(a, b);

    cout << "a = " << a << endl;
    cout << "b = " << b << endl;
    cout << "a OR b = " << r.OR << endl;
    cout << "a AND b = " << r.AND << endl;
    cout << "a XOR b = " << r.XOR << endl;

    return 0;
}
